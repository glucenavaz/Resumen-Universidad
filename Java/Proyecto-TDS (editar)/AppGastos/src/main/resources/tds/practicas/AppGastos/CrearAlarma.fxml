<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefWidth="400.0" spacing="20.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vista.ControladorCrearAlarma">
   <padding>
      <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
   </padding>
   <children>
      <Label fx:id="lblTitulo" text="Nueva Alarma de Gasto" textFill="#2c3e50">
         <font>
            <Font name="Segoe UI Bold" size="20.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      
      <VBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label text="Nombre de la alerta" textFill="#7f8c8d" />
            <TextField fx:id="txtNombre" prefHeight="35.0" promptText="Ej: Límite Restaurantes..." style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
         </children>
      </VBox>
      
      <VBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label text="Límite del importe (€)" textFill="#7f8c8d" />
            <TextField fx:id="txtLimite" prefHeight="35.0" promptText="0.00" style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
         </children>
      </VBox>
      
      <VBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label text="Categoría a vigilar" textFill="#7f8c8d" />
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <ComboBox fx:id="comboCategoria" maxWidth="Infinity" prefHeight="35.0" prefWidth="150.0" promptText="Todas las categorías" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5;" HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#accionNuevaCategoria" prefHeight="35.0" prefWidth="35.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;" text="+" />
               </children>
            </HBox>
         </children>
      </VBox>
      
      <HBox alignment="CENTER" spacing="30.0" style="-fx-background-color: #f9f9f9; -fx-background-radius: 5; -fx-padding: 10;">
         <children>
            <RadioButton fx:id="radioMensual" mnemonicParsing="false" selected="true" text="Mensual" textFill="#2c3e50">
               <toggleGroup>
                  <ToggleGroup fx:id="grupoEstrategia" />
               </toggleGroup>
               <font>
                  <Font name="Segoe UI" size="13.0" />
               </font>
            </RadioButton>
            <RadioButton fx:id="radioSemanal" mnemonicParsing="false" text="Semanal" textFill="#2c3e50" toggleGroup="$grupoEstrategia">
               <font>
                  <Font name="Segoe UI" size="13.0" />
               </font></RadioButton>
         </children>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </HBox>
      
      <Button fx:id="btnGuardar" mnemonicParsing="false" onAction="#guardarAlarma" prefHeight="45.0" prefWidth="250.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand; -fx-font-weight: bold;" text="Crear Alarma">
         <font>
            <Font size="14.0" />
         </font>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
         <effect>
            <DropShadow color="#2ecc714d" offsetY="3.0" />
         </effect>
      </Button>
   </children>
</VBox>